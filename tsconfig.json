{
  "ts-node": {
    "esm": true,
    "moduleResolution": "node",
  },
  "compilerOptions": {
    "experimentalDecorators": true,
    "target": "ES2020",
    "lib": ["ES2020"],
    "emitDecoratorMetadata": true,
    "module": "ESNext",
    "baseUrl": ".",
    "sourceMap": true,
    "rootDirs": ["src"],
    "outDir": "./dist",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "types": ["node"],
    "skipLibCheck": true
  },
  "include": ["./src/**/*.ts"],
  "exclude": ["node_modules"]
}
